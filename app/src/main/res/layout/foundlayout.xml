<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/jdd" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/userName"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="02-10  07:03"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/message"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_post_item">

        <ImageView
            android:id="@+id/img_sort"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/jdd" />

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/img_sort"
            android:text="@string/football"
            android:textColor="#333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@id/img_sort"
            android:layout_marginTop="2dp"
            android:layerType="software"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/tv_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_sort"
            android:layout_below="@id/img_line"
            android:layout_marginTop="10dp"
            android:text="@string/acount"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_acount_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_acount"
            android:text="@string/acount_num"
            android:textColor="#f25149"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/tv_rate_num"
            android:text="@string/rate"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginRight="20dp"
            android:text="@string/rate_num"
            android:textColor="#f25149"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_acount"
            android:layout_below="@id/tv_acount"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="14dp"
            android:text="@string/bonus"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bonus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_acount_num"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_bonus"
            android:text="@string/bonus_num"
            android:textColor="#f25149"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_p2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@id/tv_rate_num"
            android:layout_alignRight="@id/tv_rate_num"
            android:src="@drawable/p2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/comment"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>

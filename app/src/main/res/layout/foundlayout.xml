<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/jdd"
            android:id="@+id/img1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/userName"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle=""
                android:id="@+id/tv_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="02-10  07:03"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle=""
                android:id="@+id/tv_time" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/message"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle=""
        android:id="@+id/tv_message" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_post_item"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:id="@+id/img_sort"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/jdd" />

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/img_sort"
            android:text="@string/football"
            android:textColor="#333333"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:src="@drawable/line"
            android:layout_below="@id/img_sort"
            android:layout_marginTop="2dp"
            android:id="@+id/img_line"
            />

        <TextView
            android:id="@+id/tv_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_sort"
            android:layout_below="@id/img_sort"
            android:layout_marginTop="14dp"
            android:text="@string/acount"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_acount_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_acount"
            android:text="@string/acount_num"
            android:textColor="#f25149"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/tv_acount"
            android:text="@string/rate"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_acount"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_rate"
            android:text="@string/rate_num"
            android:textColor="#f25149"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_acount"
            android:layout_below="@id/tv_acount"
            android:layout_marginTop="14dp"
            android:text="@string/bonus"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bonus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_acount_num"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_bonus"
            android:text="@string/bonus_num"
            android:textColor="#f25149"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignTop="@id/img_sort"
            android:layout_marginLeft="260dp"
            android:src="@drawable/p2"
            android:id="@+id/img_p2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read"
            android:textSize="12sp"
            android:textColor="#999999"
            android:id="@+id/tv_read"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/comment"
            android:textSize="12sp"
            android:textColor="#999999"
            android:id="@+id/tv_comment" />
    </LinearLayout>



</LinearLayout>
